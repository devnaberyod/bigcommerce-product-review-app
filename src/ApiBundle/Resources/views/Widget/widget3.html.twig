
<style type="text/css">
	.clevrev-theme3-wrapper{
		width: 100%;
		height: inherit;
		position: relative;
		padding: 10px 20px 20px;
		background: #e4e9ef;
		font-family: 'Helvetica Neue',Helvetica,Arial,sans-serif;
	}
	.clevrev-theme3-title{
		text-align: center;
	}
	.clevrev-theme3swidget{
		overflow-y: scroll;
		height: calc(100% - 60px);
	}
	.clevrev-theme3swidget::-webkit-scrollbar {
	    width: 12px;
	    background-color: #F5F5F5;
	}
	.clevrev-theme3swidget::-webkit-scrollbar-thumb {
	    border-radius: 10px;
	    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
	    background-color: #a5aab1;
	}
	.clevrev-theme3swidget::-webkit-scrollbar-track {
	    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
	    border-radius: 10px;
	    background-color: #F5F5F5;
	}
	.clevrev-theme3-review:nth-child(even){
		background:#fff;
	}
	.clevrev-theme3-review:nth-child(odd){
		background:#fff;
	}
	.clevrev-theme3-review{
		background: #fff; 
		padding: 20px; 
		margin-bottom: 15px; 
		box-shadow: 1px 1px 5px rgba(181, 181, 181, 0.6); 
		border-radius: 6px; 
		color: #8899a6;
		font-size: 14px;
	}
	.clevrev-theme3-review-date{
		float: right;
	}
	.clevrev-theme3-review-author{
		padding-bottom: 5px;
	}
	.clevrev-theme3-review-rating{
		padding-bottom: 5px;
		color: #efe36c;
	    font-size: 20px;
		line-height: 1;
	}
	.clevrev-theme3-review-statement p{
		margin: 0px;
	}
</style>
<div class="clevrev-theme3-wrapper">
	<h3 class="clevrev-theme3-title">Theme 3 With Scroll</h3>
	<div class="clevrev-theme3swidget">
		{% if reviews and reviews is iterable %}
			{% for rev in reviews %}
				<article class="clevrev-theme3-review">
					<div class="clevrev-theme3-review-date"><time datetime="{{rev.date_created|date("F jS \\a\\t g:ia")}}">{{rev.date_created|date("F jS \\a\\t g:ia")}}</time></div>
					<div class="review-author"> {{rev.author}}</div>
					<div class="clevrev-theme3-review-rating">
						{% for i in range(1, rev.rating) %}
							<span data-id="{{i}}">â˜…</span>
						{% endfor %}
					</div>
					<div class="review-statement">
						<p>{{rev.review}}</p>
					</div>
				</article>
			{% endfor %}
		{% endif %}
	</div>	
</div>
