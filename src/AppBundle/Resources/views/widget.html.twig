	<section id="manage-reviews">
		<h3>Manage Reviews</h3>
			<div class="row">
				<div class="col-md-8">
					<table class="table data-table" id="reviews">
						<thead>
							<tr>
								<th></th>
								<th>Name</th>
								<th>Title</th>
								<th>Message</th>
								<th>Rating</th>
							</tr>
						</thead>
						<tbody>
							{% if product_reviews is iterable %}
								{% for pr in product_reviews %}
									<tr>
										<td><input class="review-chk" {{pr.is_selected ? 'checked' : ''}} type="checkbox" name="review-select" data-id="{{pr.id}}" data-productid="{{pr.product_id}}"></td>
										<td>{{pr.author}}</td>
										<td>{{pr.title}}</td>
										<td>{{pr.review}}</td>
										<td>{{pr.rating}}</td>
									</tr>
								{% endfor %}
							{% endif %}

							{% if product_reviews is not iterable %}
								<tr>No Product Reviews.</tr>
							{% endif %}
						</tbody>
					</table>
				</div>
				<div class="col-md-4">
					<!-- Fields for other widget details -->
					<div class="form-container">
						<input type="hidden" name="widget-id" value="{{widget ? widget.id : ''}}">
